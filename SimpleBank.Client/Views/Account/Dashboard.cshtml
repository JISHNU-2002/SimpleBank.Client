@model SimpleBankClient.Entity.Dto.DashboardDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_HomeLayout";
}

<style>
    .dashboard-container {
        position: relative;
        z-index: 1;
    }

    .dashboard-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 1rem;
        background-color: rgba(255, 255, 255, 0.9);
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="d-flex">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4 main-content">
        <div class="dashboard-container">
            @if (Model == null)
            {
                <div class="alert alert-warning text-center shadow-sm rounded-3">
                    <h4 class="mb-2">Dashboard data unavailable</h4>
                    <p class="mb-0">We couldn't retrieve your account information right now.</p>
                    <small>Please try again later or contact support.</small>
                </div>
            }
            else
            {
                <div class="mb-4 d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Welcome, <span class="text-primary">@Model.FullName</span></h2>
                </div>
                <hr />

                <!-- Email & Phone Card Row -->
                <div class="card mb-4 shadow border-0 rounded-4">
                    <div class="card-body">
                        <div class="row g-3">

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="card border-info shadow-sm rounded-4 h-100">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Email</h6>
                                        <h5 class="fw-bold">@Model.Email</h5>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6">
                                <div class="card border-success shadow-sm rounded-4 h-100">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Phone</h6>
                                        <h5 class="fw-bold">@Model.PhoneNumber</h5>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Balance, Transfer & Account Number Row -->
                <div class="row justify-content-center mb-4 g-4">
                    <!-- Account Number Card -->
                    <div class="col-md-4">
                        <div class="card dashboard-card shadow border-0 text-center p-4 h-100">
                            <img src="https://cdn-icons-png.flaticon.com/512/1250/1250590.png" alt="Account Icon" style="max-width:80px;" class="mb-3" />
                            <h5 class="fw-bold mb-2">Account Number</h5>
                            <p class="text-muted small mb-4">
                                Your bank account number.
                            </p>
                            <h4 class="fw-bold">@Model.AccountNumber</h4>
                        </div>
                    </div>                    

                    <!-- Transfer Card -->
                    <div class="col-md-4">
                        <div class="card dashboard-card shadow border-0 text-center p-4 h-100">
                            <img src="https://cdn-icons-png.flaticon.com/512/2716/2716049.png" alt="Transfer Icon" style="max-width:80px;" class="mb-3" />
                            <h5 class="fw-bold mb-2">Transfer Funds</h5>
                            <p class="text-muted small mb-4">
                                Send money securely and instantly to other accounts.
                            </p>
                            <a href="@Url.Action("Transfer", "Transactions")"
                               class="btn btn-primary btn-lg rounded-pill px-4">Transfer</a>
                        </div>
                    </div> 
                    
                    <!-- Balance Card -->
                    <div class="col-md-4">
                        <div class="card dashboard-card shadow border-0 text-center p-4 h-100">
                            <img src="https://cdn-icons-png.flaticon.com/512/2331/2331946.png" alt="Balance Icon" style="max-width:80px;" class="mb-3" />
                            <h5 class="fw-bold mb-2">Account Balance</h5>
                            <p class="text-muted small mb-4">
                                Your available account balance.
                            </p>
                            <h4 class="fw-bold text-success">₹@Model.Balance.ToString("N2")</h4>
                        </div>
                    </div>
                </div>                

                <!-- Recent Transactions -->
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header bg-primary text-white rounded-top-4">
                        <h5 class="mb-0">Recent Transactions</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Transactions != null && Model.Transactions.Any())
                        {
                            var recentTransactions = Model.Transactions
                                .OrderByDescending(t => t.TransactionDate)
                                .Take(3);
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered w-100">
                                    <thead class="table-light text-center">
                                        <tr>
                                            <th>Transaction Id</th>
                                            <th>Date</th>
                                            <th>From - Account Number</th>
                                            <th>IFSC</th>
                                            <th>To - Account Number</th>
                                            <th>IFSC</th>
                                            <th>Amount</th>
                                            <th>Transaction Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var t in recentTransactions)
                                        {
                                            <tr class="text-center">
                                                <td>@t.TransactionId</td>
                                                <td>@t.TransactionDate.ToString("dd-MM-yyyy")</td>
                                                <td>@t.FromAccount</td>
                                                <td>@t.FromIFSC</td>
                                                <td>@t.ToAccount</td>
                                                <td>@t.ToIFSC</td>
                                                <td class="text-end">₹@t.Amount.ToString("N2")</td>
                                                <td>@t.TransactionType</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No transactions found.</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
