@model SimpleBankClient.Entity.Dto.UsersDto

@{
    ViewData["Title"] = "Delete User";
    Layout = "_HomeLayout";
}

<div class="d-flex">
    <!-- Sidebar -->
    @await Html.PartialAsync("_SidebarPartial")

    <!-- Main content: center-aligned card -->
    <div class="flex-grow-1 d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow" style="width: 500px;">
            <div class="card-header bg-danger text-white text-center">
                <h5 class="mb-0">Delete User</h5>
            </div>
            <div class="card-body">
                <p class="text-center">
                    Are you sure you want to delete the user:
                    <strong>@Model.FullName</strong> (<strong>@Model.Username</strong>)?
                </p>

                <hr />

                <dl class="row">
                    <dt class="col-sm-4">Account Number</dt>
                    <dd class="col-sm-8">@Model.AccountNumber</dd>

                    <dt class="col-sm-4">Balance</dt>
                    <dd class="col-sm-8">@Model.Balance</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Branch</dt>
                    <dd class="col-sm-8">@Model.BranchName (@Model.IFSC)</dd>
                </dl>

                <form asp-action="DeleteUser" method="post">
                    <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                    <a asp-action="Users" asp-controller="AdminDashboard" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
