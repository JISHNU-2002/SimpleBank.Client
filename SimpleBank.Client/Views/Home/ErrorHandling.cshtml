@{
    ViewData["Title"] = "Page Not Found";
    Layout = null; // No layout for a clean error page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleBank</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #6f42c1);
            font-family: 'Nunito', sans-serif;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .error-container {
            max-width: 500px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0,0,0,0.1);
            backdrop-filter: blur(8px);
            animation: fadeIn 1s ease-in-out;
        }

        h1 {
            font-size: 8rem;
            font-weight: bold;
        }

        .btn-custom {
            background-color: #ffc107;
            color: #000;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ffcd39;
                transform: scale(1.05);
            }
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>404</h1>
        <h4>Oops! Page not found</h4>
        <p>The page you are looking for might have been removed or temporarily unavailable.</p>
        <a href="/" class="btn btn-custom mt-3">Go to Homepage</a>
    </div>
</body>
</html>
