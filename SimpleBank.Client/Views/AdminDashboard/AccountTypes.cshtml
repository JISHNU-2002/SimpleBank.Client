@model IEnumerable<SimpleBankClient.Entity.Dto.AccountTypeDto>

@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Account Types";
}


<div class="d-flex">
    @await Html.PartialAsync("_SidebarPartial")

    <!-- Main content -->
    <div class="p-4 flex-grow-1 w-100">
        <h2 class="mb-4">Account Types</h2>

        <div class="mb-3">
            <form asp-controller="AccountType" asp-action="AddAccountType" method="get">
                <button type="submit" class="btn btn-success">+ Add Account Type</button>
            </form>
        </div>

        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="actypeTable" class="table table-hover table-bordered table-striped">
                        <thead class="table-info">
                            <tr>
                                <th style="width: 10%;">@Html.DisplayNameFor(model => model.First().TypeId)</th>
                                <th style="width: 50%;">@Html.DisplayNameFor(model => model.First().TypeName)</th>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.First().MinBalance)</th>
                                <th style="width: 20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.TypeId)</td>
                                    <td>@Html.DisplayFor(m => item.TypeName)</td>
                                    <td class="text-end">₹@item.MinBalance.ToString("N2")</td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-1 justify-content-center">
                                            <div class="mb-3">
                                                <form asp-controller="AccountType" asp-action="EditAccountType" asp-route-id="@item.TypeId" method="get">
                                                    <button type="submit" class="btn btn-warning">Edit</button>
                                                </form>
                                            </div>
                                            <div class="mb-3">
                                                <form asp-controller="AccountType" asp-action="DeleteAccountType" asp-route-id="@item.TypeId" method="get">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#actypeTable').DataTable({
                responsive: true,
                autoWidth: false,
                pageLength: 10,
                columnDefs: [
                    { targets: '_all', className: 'dt-nowrap' }
                ]
            });
        });
    </script>
}

<style>
    #actypeTable td {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
