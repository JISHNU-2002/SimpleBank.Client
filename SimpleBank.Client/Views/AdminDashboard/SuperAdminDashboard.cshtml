@{
    ViewData["Title"] = "SuperAdmin Dashboard";
    Layout = "_HomeLayout";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }

    .main-content {
        background: url("https://protium.co.in/wp-content/uploads/2022/12/Banking-as-a-service-BaaS-700x682.png") no-repeat center center;
        background-size: contain; 
        background-color: #f8f9fa; 
        position: relative;
    }

    .main-content::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 0;
    }

    .dashboard-container {
        min-height: calc(100vh - 60px);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        position: relative;
        z-index: 1; 
    }

    .welcome-text {
        text-align: center;
        margin-bottom: 2rem;
        color: #fff;
        font-weight: bold;
        text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
    }

    .dashboard-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 1rem;
        background-color: rgba(255, 255, 255, 0.9);
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .dashboard-card img {
        max-width: 80px;
        margin-bottom: 1rem;
    }
</style>

<div class="d-flex">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4 main-content">
        <div class="dashboard-container">
            <div class="welcome-text">
                <h1>Welcome, <span class="fw-bold">@User.Identity.Name</span></h1>
                <p class="mb-0">Manage your system settings and users from here.</p>
            </div>

            <div class="row g-4 justify-content-center w-100" style="max-width: 900px;">
                <!-- Users Card -->
                <div class="col-md-5">
                    <div class="card dashboard-card shadow border-0 text-center p-4 h-100">
                        <img src="https://cdn-icons-png.flaticon.com/512/1077/1077114.png" alt="Users Icon" />
                        <h5 class="fw-bold mb-2">Manage Users</h5>
                        <p class="text-muted small mb-4">
                            View, create, and manage all registered users in the system.
                        </p>
                        <a asp-controller="AdminDashboard" asp-action="Users"
                           class="btn btn-primary btn-lg rounded-pill px-4">Go to Users</a>
                    </div>
                </div>

                <!-- Roles Card -->
                <div class="col-md-5">
                    <div class="card dashboard-card shadow border-0 text-center p-4 h-100">
                        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828469.png" alt="Roles Icon" />
                        <h5 class="fw-bold mb-2">Manage Roles</h5>
                        <p class="text-muted small mb-4">
                            Assign and modify roles for better access control.
                        </p>
                        <a asp-controller="AdminDashboard" asp-action="Roles"
                           class="btn btn-success btn-lg rounded-pill px-4">Go to Roles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
