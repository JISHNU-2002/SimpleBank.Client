<div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
    <h4 class="mb-4">SimpleBank</h4>
    <ul class="nav flex-column">
        @if (User.IsInRole("SuperAdmin"))
        {
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="SuperAdminDashboard">Admin Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Users">Users <i class="fa-solid fa-users"></i></a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Roles">Roles <i class="fa-solid fa-address-book"></i></a>
            </li>
        }
        else if (User.IsInRole("Manager"))
        {
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="ManagerDashboard">Manager Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Branches">Branches</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Users">Users</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Transactions">Transactions</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="AccountTypes">Account Types</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Applications">Application Forms</a>
            </li>
        }
        else
        {
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="Account" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="Account" asp-action="Profile">Profile</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" asp-controller="Transactions" asp-action="TransactionHistory">Transaction History</a>
            </li>
        }
        <li class="nav-item mb-2">
            <a class="nav-link text-white" asp-controller="Authorize" asp-action="ChangePassword">Change Password</a>
        </li>
        <li class="nav-item mb-10">
            <a class="btn btn-outline-light w-100 text-start" asp-controller="Authorize" asp-action="Logout"><i class="fa-solid fa-power-off"></i></a>
        </li>
    </ul>
</div>
