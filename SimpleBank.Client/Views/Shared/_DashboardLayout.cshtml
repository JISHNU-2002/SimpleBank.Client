<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SimpleBank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px; height: 100vh;">
            <h4 class="mb-4">SimpleBank</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="Dashboard">My Account</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Transaction" asp-action="History">Transaction History</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Transaction" asp-action="Transfer">Transfer Money</a>
                </li>
                <li class="nav-item mt-4">
                    <a class="btn btn-outline-light w-100 text-start" asp-controller="Authorize" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1 p-4 bg-light">
            @RenderBody()
        </div>
    </div>
</body>
</html>
