@model SimpleBankClient.Entity.Dto.DashboardDto
@{
    ViewData["Title"] = "Transaction History";
    Layout = "_HomeLayout";
}

<style>
    .transfer-btn-wrapper {
        position: relative;
    }
    .transfer-btn {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }
</style>

<div class="d-flex">
    <!-- Sidebar -->
    @await Html.PartialAsync("_SidebarPartial")

    <!-- Main content -->
    <div class="flex-grow-1 p-4 bg-light">
        @if (Model == null)
        {
            <div class="alert alert-warning text-center shadow-sm rounded-3">
                <h4 class="mb-2">Dashboard data unavailable</h4>
                <p class="mb-0">We couldn't retrieve your account information right now.</p>
                <small>Please try again later or contact support.</small>
            </div>
        }
        else
        {
             <!-- Account Details Card -->
            <div class="card mb-4 shadow border-0 rounded-4">
                <div class="card-body">
                    <div class="row g-3">

                        <!-- Account Number -->
                        <div class="col-md-3">
                            <div class="card border-primary shadow-sm rounded-4 h-100">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Account Number</h6>
                                    <h5 class="fw-bold">@Model.AccountNumber</h5>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-3">
                            <div class="card border-info shadow-sm rounded-4 h-100">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Email</h6>
                                    <h5 class="fw-bold">@Model.Email</h5>
                                </div>
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="col-md-3">
                            <div class="card border-success shadow-sm rounded-4 h-100">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Phone</h6>
                                    <h5 class="fw-bold">@Model.PhoneNumber</h5>
                                </div>
                            </div>
                        </div>

                        <!-- Balance -->
                        <div class="col-md-3">
                            <div class="card border-warning shadow-sm rounded-4 h-100">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Balance</h6>
                                    <h5 class="fw-bold text-success">₹@Model.Balance.ToString("N2")</h5>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Transactions Table -->
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h5 class="mb-0">Transaction History</h5>
                </div>
                <div class="card-body">
                    @if (Model.Transactions != null && Model.Transactions.Any())
                    {
                        <div class="table-responsive">
                            <table id="transactionsTable" class="table table-striped table-bordered w-100">
                                <thead class="table-light text-center">
                                    <tr>
                                        <th>Transaction Id</th>
                                        <th>Date</th>
                                        <th>From - Account Number</th>
                                        <th>IFSC</th>
                                        <th>To - Account Number</th>
                                        <th>IFSC</th>
                                        <th>Amount</th>
                                        <th>Transaction Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var t in Model.Transactions.OrderByDescending(t => t.TransactionDate))
                                    {
                                        <tr class="text-center">
                                            <td>@t.TransactionId</td>
                                            <td>@t.TransactionDate.ToString("dd-MM-yyyy")</td>
                                            <td>@t.FromAccount</td>
                                            <td>@t.FromIFSC</td>
                                            <td>@t.ToAccount</td>
                                            <td>@t.ToIFSC</td>
                                            <td class="text-end">₹@t.Amount.ToString("N2")</td>
                                            <td>@t.TransactionType</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No transactions found.</p>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#transactionsTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    searchPlaceholder: "Search transactions..."
                }
            });
        });
    </script>
}
