@model IEnumerable<SimpleBankClient.Entity.Dto.UserRolesDto>

@{
    ViewData["Title"] = "Role Details";
    Layout = "_HomeLayout";
}

<div class="d-flex">
    <!-- Sidebar -->
    @await Html.PartialAsync("_SidebarPartial")

    <!-- Main content -->
    <div class="p-4 flex-grow-1 w-100">
        <div class="card shadow rounded-4 border-primary">
            <div class="card-header bg-primary text-white text-center rounded-top">
                <h4 class="mb-0">Users in Role</h4>
            </div>

            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead class="table-light text-center">
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.First().FormId)</th>
                                    <th>@Html.DisplayNameFor(m => m.First().UserName)</th>
                                    <th>@Html.DisplayNameFor(m => m.First().AccountNumber)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>@item.FormId</td>
                                        <td>@item.UserName</td>
                                        <td>@item.AccountNumber</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">No users found for this role.</div>
                }
            </div>
        </div>
    </div>
</div>
