@using SimpleBankClient.Entity.Dto
@model ApplicationSubmitDto
@{
    ViewData["Title"] = "Application Submitted - Simple Bank";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        /* Match home page theme */
        .bg-theme {
            background: linear-gradient(135deg, #004bff 0%, #0052cc 50%, #0069ff 100%);
            position: relative;
            height: 100%;
            color: white;
            overflow: hidden;
        }

            /* Faded background image */
            .bg-theme::before {
                content: "";
                background: url('https://protium.co.in/wp-content/uploads/2022/12/Banking-as-a-service-BaaS-700x682.png') center/contain no-repeat;
                position: absolute;
                inset: 0;
                opacity: 0.08;
                z-index: 0;
            }

        /* Card styling */
        .success-card {
            background: #ffffff; /* Solid white, no transparency */
            border-radius: 15px;
            padding: 2rem;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            z-index: 1;
            color: #000; /* Ensure all normal text is black */
        }


        .success-icon {
            font-size: 3rem;
            color: #28a745;
        }
    </style>
</head>
<body>
    <div class="bg-theme d-flex justify-content-center align-items-center">
        <div class="success-card text-center">
            <div class="success-icon mb-3">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h4 class="text-success fw-bold mb-3">Application Submitted!</h4>
            <p class="mb-2">Thank you for your application.</p>
            <p><strong>Reference Form ID:</strong> <span class="text-primary">@Model.FormId</span></p>
            <p>A confirmation email will be sent to <strong>@Model.Email</strong> shortly.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3 px-4 rounded-pill">Return to Home</a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
