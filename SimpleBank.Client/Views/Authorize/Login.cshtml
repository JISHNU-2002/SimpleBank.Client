@model SimpleBankClient.Entity.Dto.UserRequest
@{
    ViewData["Title"] = "Simple Bank - Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        .hero-section {
            background: linear-gradient(135deg, #004bff 0%, #0052cc 50%, #0069ff 100%);
            min-height: 100vh;
            color: white;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .form-control::placeholder {
            color: #ccc;
        }

        .form-box {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
            max-width: 380px;
            margin: auto;
        }


        .btn-gradient-primary {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            color: white;
        }

            .btn-gradient-primary:hover {
                background: linear-gradient(45deg, #0056b3, #004085);
            }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0;
            list-style: none;
            color: #ffc107;
        }

        .text-validation {
            color: #ffc107;
        }

        .banking-image {
            border-radius: 20px;
            max-height: 500px;
            object-fit: contain;
            width: 100%;
            filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.3));
        }
    </style>
</head>
<body>
    <div class="hero-section">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <i class="bi bi-bank me-2"></i>Simple Bank
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <hr />

        <!-- Main Content -->
        <div class="container">
            <div class="row align-items-center" style="min-height: calc(100vh - 80px);">
                <!-- Left: Login Form -->
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="form-box text-white">
                        <h2 class="mb-4 fw-bold">Login to Your Account</h2>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-validation mb-3"></div>

                        <form asp-controller="Authorize" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
                                <span asp-validation-for="Username" class="text-validation"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-validation"></span>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-gradient-primary btn-lg">Login</button>
                            </div>

                            <div>
                                <small>
                                    Don't have an account?
                                    <a class="text-warning fw-bold" asp-controller="ApplicationForm" asp-action="Index">Open one now</a>
                                </small>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Right: Image -->
                <div class="col-lg-6">
                    <div class="position-relative d-flex align-items-center justify-content-center">
                        <img src="https://protium.co.in/wp-content/uploads/2022/12/Banking-as-a-service-BaaS-700x682.png"
                             alt="Digital Banking Illustration"
                             class="banking-image"
                             loading="lazy">
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("NToastNotify");

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
