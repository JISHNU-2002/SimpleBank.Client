@model SimpleBankClient.Entity.Dto.UpdateBranchDto

@{
    ViewData["Title"] = "Update Branch";
    Layout = "_HomeLayout";
}

<div class="d-flex">
    @await Html.PartialAsync("_SidebarPartial")

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow" style="width: 400px;">
            <div class="card-header bg-warning text-dark text-center">
                <h5 class="mb-0">Update Branch</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateBranch" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" name="IFSC" value="@Model.IFSC" />

                    <div class="mb-3">
                        <label asp-for="BranchName" class="form-label"></label>
                        <input asp-for="BranchName" class="form-control" />
                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="State" class="form-label"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="Branches" asp-controller="AdminDashboard" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
